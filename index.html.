<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SOYLIMPO MARKET</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&display=swap');
        body { font-family: 'Inter', sans-serif; }
        .custom-scrollbar::-webkit-scrollbar { width: 4px; }
        .custom-scrollbar::-webkit-scrollbar-thumb { background: #10b981; border-radius: 10px; }
    </style>
</head>
<body class="bg-[#f8fafc] text-slate-800">
    <div id="app"></div>

    <script>
        // --- L칩gica de la Aplicaci칩n ---
        let publications = JSON.parse(localStorage.getItem('soylimpo_posts')) || [];

        function render() {
            const app = document.getElementById('app');
            app.innerHTML = `
                <nav class="sticky top-0 z-50 bg-white/80 backdrop-blur-md border-b border-slate-200 px-4 py-4">
                    <div class="max-w-6xl mx-auto flex flex-col md:flex-row items-center justify-between gap-4">
                        <div class="flex items-center gap-2">
                            <div class="bg-emerald-500 p-2 rounded-xl shadow-lg">
                                <i data-lucide="shield-check" class="text-white"></i>
                            </div>
                            <h1 class="text-2xl font-black text-slate-900">SOYLIMPO <span class="text-emerald-500">MARKET</span></h1>
                        </div>
                        <button onclick="openModal()" class="bg-emerald-600 text-white px-8 py-3 rounded-2xl font-bold shadow-lg active:scale-95 flex items-center gap-2">
                            <i data-lucide="plus"></i> Vender Brainrot
                        </button>
                    </div>
                </nav>

                <main class="max-w-5xl mx-auto px-4 py-12">
                    <div class="mb-12 text-center">
                        <h2 class="text-4xl font-black text-slate-900 mb-4">Cat치logo de Brainrots</h2>
                        <p class="text-slate-500">Fotos reales. Sin estafas. Compra limpio.</p>
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-8" id="posts-container">
                        ${renderPosts()}
                    </div>
                </main>

                <!-- Modal -->
                <div id="modal" class="fixed inset-0 z-[60] hidden items-center justify-center p-4 bg-slate-900/40 backdrop-blur-md">
                    <div class="bg-white w-full max-w-xl rounded-[3rem] p-10 shadow-2xl border border-white overflow-y-auto max-h-[90vh]">
                        <div class="flex justify-between mb-8">
                            <h2 class="text-2xl font-black italic">PUBLICAR VENTA</h2>
                            <button onclick="closeModal()"><i data-lucide="x"></i></button>
                        </div>
                        <form onsubmit="handlePublish(event)" class="space-y-4">
                            <input type="text" id="seller" placeholder="Tu Usuario" required class="w-full bg-slate-100 p-4 rounded-2xl outline-none border-2 border-transparent focus:border-emerald-500">
                            <input type="number" id="price" placeholder="Precio $$$" required class="w-full bg-slate-100 p-4 rounded-2xl outline-none border-2 border-transparent focus:border-emerald-500">
                            <input type="text" id="title" placeholder="Nombre del Brainrot" required class="w-full bg-slate-100 p-4 rounded-2xl outline-none border-2 border-transparent focus:border-emerald-500">
                            <input type="url" id="imageUrl" placeholder="URL de la Foto (Imgur/Discord)" class="w-full bg-slate-100 p-4 rounded-2xl outline-none border-2 border-transparent focus:border-emerald-500">
                            <textarea id="description" placeholder="Descripci칩n..." required class="w-full bg-slate-100 p-4 rounded-2xl outline-none border-2 border-transparent focus:border-emerald-500 h-32"></textarea>
                            <button type="submit" class="w-full bg-emerald-600 text-white font-black py-5 rounded-[2rem] text-xl">SUBIR A SOYLIMPO 游</button>
                        </form>
                    </div>
                </div>
            `;
            lucide.createIcons();
        }

        function renderPosts() {
            if (publications.length === 0) return '<p class="col-span-full text-center text-slate-400 py-20 italic">No hay nada en venta...</p>';
            return publications.map(post => `
                <div class="bg-white rounded-[2rem] shadow-xl border border-slate-100 overflow-hidden">
                    <img src="${post.imageUrl || 'https://via.placeholder.com/400x300'}" class="w-full h-64 object-cover">
                    <div class="p-8">
                        <div class="flex justify-between items-start mb-4">
                            <h3 class="text-2xl font-black">${post.title}</h3>
                            <span class="bg-emerald-500 text-white px-3 py-1 rounded-lg font-bold">$${post.price}</span>
                        </div>
                        <p class="text-emerald-600 font-bold mb-4">@${post.seller}</p>
                        <p class="text-slate-500 italic mb-6">${post.description}</p>
                        <div class="border-t pt-4">
                            <h4 class="font-bold flex items-center gap-2 mb-2"><i data-lucide="message-circle" class="w-4 h-4 text-blue-500"></i> Respuestas</h4>
                            <div class="space-y-2">
                                ${post.reviews.map(r => `<div class="bg-slate-50 p-2 rounded-lg text-xs"><b>${r.user}:</b> ${r.text}</div>`).join('')}
                            </div>
                            <input type="text" placeholder="Comentar..." class="mt-4 w-full bg-slate-100 p-2 rounded-xl text-xs outline-none" 
                                   onkeydown="if(event.key==='Enter') addComment(${post.id}, this.value)">
                        </div>
                    </div>
                </div>
            `).join('');
        }

        function openModal() { document.getElementById('modal').classList.replace('hidden', 'flex'); }
        function closeModal() { document.getElementById('modal').classList.replace('flex', 'hidden'); }

        function handlePublish(e) {
            e.preventDefault();
            const newPost = {
                id: Date.now(),
                seller: document.getElementById('seller').value,
                price: document.getElementById('price').value,
                title: document.getElementById('title').value,
                imageUrl: document.getElementById('imageUrl').value,
                description: document.getElementById('description').value,
                reviews: []
            };
            publications.unshift(newPost);
            localStorage.setItem('soylimpo_posts', JSON.stringify(publications));
            closeModal();
            render();
        }

        function addComment(id, text) {
            const post = publications.find(p => p.id === id);
            if(post) {
                post.reviews.push({ user: 'Anon', text: text });
                localStorage.setItem('soylimpo_posts', JSON.stringify(publications));
                render();
            }
        }

        render();
    </script>
</body>
</html>
